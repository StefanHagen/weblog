.container-fluid
  .row-fluid
    .col-md-4.col-md-offset-4
      = form_tag(:admin_login) do
        .form-group
          = text_field_tag :email, nil, :placeholder => t("admin.placeholders.email"), :class => "form-control"
        .form-group
          = password_field_tag :password, nil, :placeholder => t("admin.placeholders.password"), :class => "form-control"
        .form-group
          = submit_tag t("admin.placeholders.sign_in"), :class => "pull-right btn btn-primary gold-button"